<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include
        android:id="@+id/fileFormat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@android:layout/simple_list_item_2"
        app:layout_constraintBottom_toTopOf="@+id/videoCodec"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/videoCodec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@android:layout/simple_list_item_2"
        app:layout_constraintBottom_toTopOf="@+id/width"
        app:layout_constraintTop_toBottomOf="@+id/fileFormat" />

    <include
        android:id="@+id/width"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@android:layout/simple_list_item_2"
        app:layout_constraintBottom_toTopOf="@+id/height"
        app:layout_constraintTop_toBottomOf="@+id/videoCodec" />

    <include
        android:id="@+id/height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@android:layout/simple_list_item_2"
        app:layout_constraintBottom_toTopOf="@+id/protocol"
        app:layout_constraintTop_toBottomOf="@+id/width" />

    <include
        android:id="@+id/protocol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@android:layout/simple_list_item_2"
        app:layout_constraintTop_toBottomOf="@+id/height" />

    <include
        android:id="@+id/uri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@android:layout/simple_list_item_2"
        app:layout_constraintTop_toBottomOf="@+id/protocol" />

    <SurfaceView
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/surfaceView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uri"
        android:layout_width="match_parent"
        android:layout_height="220dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>